// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Types {
  NORMAL
  MEDIO_FESTIVO
  FESTIVO
}

enum Way {
  IDA
  VUELTA
}

model route {
  id      Int      @id @default(autoincrement())
  title   String
  hash    String?
  updated DateTime @default(now())
  type    Types
  way     Way
}

model params {
  id               Int       @id
  lastProcessedJob DateTime?
}

model user {
  id        Int    @id @default(autoincrement())
  tid       Int
  firstName String
  lastName  String
  username  String
  language  String
}

model log {
  id   Int      @id @default(autoincrement())
  log  Json
  date DateTime @default(now())
}
